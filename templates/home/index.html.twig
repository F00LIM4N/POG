{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{# {{ dump(games) }} #}
	<div class="LeoTest">
		<img src="/assets/img/test.jpg" alt="">
	</div>
	<div class="FirstViewBody">
		<div class="LogoTitle">
			<h1>PoG</h1>
		</div>
		<div class="NavbarMidPosition">
			<div class="FirstNavbarMid">
				{% block navbar %}
					{% include 'navbar.html.twig' %}
				{% endblock %}
			</div>
		</div>
	</div>

	<div class="gameCarousel">
		{% block carousel %}
			{% include 'home/carousel.html.twig' %}
		{% endblock %}
	</div>

	<div class="categories">
		{% block categoriesDisplay %}
			{% include 'home/categoriesDisplay.html.twig' %}
		{% endblock %}
		<div class="text-center">
			<a href="#">Afficher plus ...</a>
		</div>
	</div>

	<div class="d-flex align-items-center justify-content-center m-5 gameSelectedDescr">
		{% for game in games|slice(0, 1) %}
			<img src="{{ game.PictureGame }}" alt="">
		<div class="d-flex flex-column align-items-center m-5 homeGameDescr">
			<h3>Nom: {{ game.NameGame }} (Pegi {{ game.Pegi.ValuePegi }})</h3>
			<h5>Date de sortie: {{ game.ReleaseDateGame|date('d-m-Y') }}</h5>
			<h5>Developement: {{ game.Development.NameDevelopment }}</h5>
			<h5>Edition: {{ game.Edition.NameEdition }}</h5>
			<h5>Prix: {{ game.PriceGame }}â‚¬</h5>
		</div>
		{% endfor %}
	</div>

{% endblock %}

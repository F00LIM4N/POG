{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname_user</th>
                <th>Firstname_user</th>
                <th>Email_user</th>
                <th>Password_user</th>
                <th>Token_user</th>
                <th>Pseudo_user</th>
                <th>DateBirth_user</th>
                <th>Description_user</th>
                <th>Picture_user</th>
                <th>IsMailValid</th>
                <th>Phone_user</th>
                <th>Secu_enabled_user</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastnameUser }}</td>
                <td>{{ user.firstnameUser }}</td>
                <td>{{ user.emailUser }}</td>
                <td>{{ user.passwordUser }}</td>
                <td>{{ user.tokenUser }}</td>
                <td>{{ user.pseudoUser }}</td>
                <td>{{ user.dateBirthUser ? user.dateBirthUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.descriptionUser }}</td>
                <td>{{ user.pictureUser }}</td>
                <td>{{ user.isMailValid ? 'Yes' : 'No' }}</td>
                <td>{{ user.phoneUser }}</td>
                <td>{{ user.secuEnabledUser ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
